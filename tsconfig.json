{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "target": "esnext",
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "cjs",
    "types": [
      "jquery",
      "tampermonkey",
      "@userscripters/stackexchange-global-types",
      "format-unicorn"
    ]
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./cjs/**/*"
  ]
}